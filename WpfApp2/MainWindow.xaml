<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid >


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">


            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <TextBlock x:Name="answer" Text="" FontSize="50" HorizontalAlignment="Center"/>
            </Grid>

            <StackPanel Grid.Row="1" HorizontalAlignment="Left">
                <TextBlock Text="Num1" FontSize="30"/>
                <TextBox Background="Aqua" Width="100" x:Name="Num1"/>
            </StackPanel>

            <StackPanel Grid.Row="2" HorizontalAlignment="Left">
                <TextBlock Text="Num2" FontSize="30"/>
                <TextBox Background="Aqua" Width="100" x:Name="Num2"/>
            </StackPanel>

            <Grid Grid.Column="0" Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Button Click="Plus" Content="+" FontSize="30" Height="50" Width="50" Background="Blue" HorizontalAlignment="Center" />
                </Grid>

                <Grid Grid.Column="1">
                    <Button Click="Minos" Content="-" FontSize="30" Height="50" Width="50" Background="Blue" HorizontalAlignment="Center"/>
                </Grid>

                <Grid Grid.Column="2">
                    <Button Click="Multy" Content="*" FontSize="30" Height="50" Width="50" Background="Blue" HorizontalAlignment="Center"/>
                </Grid>

                <Grid Grid.Column="3">
                    <Button Click="Devaid" Content="/" FontSize="30" Height="50" Width="50" Background="Blue" HorizontalAlignment="Center"/>
                </Grid>
            </Grid>
        </Grid>

        <WrapPanel x:Name="history" Grid.Column="1">
            
        </WrapPanel>
    
    </Grid>
</Window>

